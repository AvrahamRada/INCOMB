<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="90dp" />
    <gradient
        android:angle="45"
        android:centerX="50%"
        android:centerColor="#E2C4E9C4"
        android:startColor="#B4388E3C"
        android:endColor="#F01A4E1A"
        android:type="linear" />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <size
        android:width="100dp"
        android:height="30dp" />
    <stroke
        android:width="1dp"
        android:color="#000000" />
</shape>