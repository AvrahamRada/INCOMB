<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    android:padding="30dp"
    tools:context=".RentPlaceCalendar">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/incomb_srinke"/>

    <TextView
        android:id="@+id/openText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="What is the availabilty of your place?"
        android:fontFamily="@font/exo_bold"
        android:textColor="#D2388E3C"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/calendar"
        android:background="@drawable/bg_calen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        //need to to do a date to date calendar
        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/select_dates"
            android:layout_width="wrap_content"
            android:layout_height="400dp" />
    </LinearLayout>

    <Button
        android:id="@+id/calendarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/exo_bold"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center">
    </Button>

</LinearLayout>