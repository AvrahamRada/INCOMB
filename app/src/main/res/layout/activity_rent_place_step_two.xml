<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    android:padding="30dp"
    tools:context=".RentPlaceStepTwo">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/incomb_srinke"/>

    <TextView
        android:id="@+id/openText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Does it have any special amenities? "
        android:fontFamily="@font/exo_bold"
        android:textColor="#D2388E3C"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <CheckBox
        android:id="@+id/checkbox_kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kitchen"/>

    <CheckBox
        android:id="@+id/checkbox_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"/>

    <CheckBox
        android:id="@+id/checkbox_yoga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoga mats"/>

    <CheckBox
        android:id="@+id/checkbox_toilet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toilet access"/>

    <CheckBox
        android:id="@+id/checkbox_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tables and chairs"/>

    <CheckBox
        android:id="@+id/checkbox_sink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A sink"/>

    <Button
        android:id="@+id/secondStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/exo_bold"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center">
    </Button>

</LinearLayout>